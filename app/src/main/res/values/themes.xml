<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFirstSteps" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/smog_medium</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/smog_lite</item>
        <item name="colorSecondaryVariant">@color/smog_lite</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomAppBarStyle" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AndroidFirstSteps.Button</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@color/smog_medium</item>

    </style>

    <style name="AndroidFirstSteps.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/smog_deep</item>
        <item name="backgroundTint">@color/smog_lite</item>
        <item name="android:textSize">30sp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
</resources>
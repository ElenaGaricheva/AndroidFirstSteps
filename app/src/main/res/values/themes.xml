<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFirstSteps" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/smog_deep</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/smog_lite</item>
        <item name="colorSecondaryVariant">@color/smog_lite</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomAppBarStyle" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AndroidFirstSteps.Button</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@color/smog_medium</item>

        <item name="android:textColor">@color/smog_deep</item>
    </style>

    <style name="AndroidFirstSteps.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/smog_deep</item>
        <item name="backgroundTint">@color/smog_lite</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="strokeWidth">@dimen/border_width</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:insetLeft">@dimen/button_inset</item>
        <item name="android:insetRight">@dimen/button_inset</item>
    </style>

    <style name="Theme.AndroidFirstSteps.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>

        <item name="colorPrimary">@color/smog_medium</item>
        <item name="colorPrimaryVariant">@color/dark_theme</item>
        <item name="colorOnPrimary">@color/dark_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme</item>
        <item name="colorSecondaryVariant">@color/dark_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomAppBarStyle" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AndroidFirstSteps.Button.Dark</item>
        <item name="android:navigationBarColor">@color/dark_theme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@color/dark_theme</item>

        <item name="android:textColor">@color/smog_medium</item>
    </style>

    <style name="AndroidFirstSteps.Button.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/smog_deep</item>
        <item name="backgroundTint">@color/smog_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="strokeWidth">@dimen/border_width</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:insetLeft">@dimen/button_inset</item>
        <item name="android:insetRight">@dimen/button_inset</item>
    </style>
</resources>